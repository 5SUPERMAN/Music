.rotate {
  animation: my-rotate 50s linear infinite;
}

@keyframes my-rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(-180deg);
  }

  100% {
    transform: rotate(-360deg);
  }
}
