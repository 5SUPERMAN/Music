/* components/song-list/song-list.wxss */
.prohibit{
  opacity: .3;
  background-color: #eee;
  /* 禁止点击 */
  pointer-events: none;
}

.item-music {
  padding: 10rpx 20rpx;
  height: 108rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.item-music-hover{
  background-color: #eee;
}

.item-music .icon {
  position: absolute;
  top: 54rpx;
  right: 14rpx;
  width: 26rpx;
  height: 26rpx;
}

