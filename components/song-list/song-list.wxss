.index{
  line-height: 108rpx;
  padding-left: 34rpx;
  font-size: 30rpx;
}

.song-name {
  position: absolute;
  top: 18rpx;
  left: 120rpx;
  width: 440rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song-name-play{
  color: #32CD32 !important;
}

.singer {
  position: absolute;
  top: 72rpx;
  left: 120rpx;
  width: 440rpx;
  font-size: 24rpx;
  color: #777;
}

