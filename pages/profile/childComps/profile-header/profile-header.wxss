/* pages/profile/childComps/profile-header/profile-header.wxss */
.profile-header{
  height: 360rpx;
  position: relative;
  overflow: hidden;
}
.avatar-bgi{
  position: absolute;
  top: -50%;
  left: 0;
  width: 100%;
  height: auto;
}
.header{
  padding: 70rpx 70rpx;
  height: 360rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}
.avatar-box{
  position: absolute;
  left: 50%;
  margin-left: -90rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 0 50rpx rgb(50, 205, 50);
  overflow: hidden;
}
.avatar{
  display: block;
  width: 100%;
  height: 100%;
}
.username-box{
  width: 350rpx;
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  margin-left: -175rpx;
  text-align: center;
}
.username{
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
}


.mask{
  position: absolute;
  top: 0;
  width: 100vw;
  height: 360rpx;
  background-color: #000;
  opacity: .4;
}