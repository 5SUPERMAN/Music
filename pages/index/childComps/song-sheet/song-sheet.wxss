/* pages/index/childComps/recommend-song/recommend-song.wxss */
.item-title {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 24rpx;
  position: relative;
}

.title {
  font-size: 36rpx;
}

.right {
  float: right;
  font-size: 26rpx;
  color: #515151;
  padding-right: 34rpx;
}

.icon {
  position: absolute;
  top: 24rpx;
  right: 32rpx;
  width: 26rpx;
  height: 26rpx;
}

.recommend-item{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 10rpx 10rpx 0 10rpx;
}
.song-sheet-item{
  width: 220rpx;
  height: 220rpx;
  padding-bottom: 120rpx;
  position: relative;
}
.song-sheet-item image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.name{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  font-size: 26rpx;
  padding: 0 10rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}