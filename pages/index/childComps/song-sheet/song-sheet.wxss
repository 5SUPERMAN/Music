.iconfont {
  float: right;
  font-size: 22rpx;
}

.sheet-item{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 10rpx 10rpx 0 10rpx;
}
.song-sheet-item{
  width: 220rpx;
  height: 220rpx;
  padding-bottom: 120rpx;
  position: relative;
}
.song-sheet-item image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}
.name{
  position: absolute;
  bottom: 35rpx;
  left: 0;
  right: 0;
  height: 77rpx;
  font-size: 26rpx;
  padding: 0 6rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* word-break: break-all; */
}