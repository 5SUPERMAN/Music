@import "/assets/wxss/iconfont.wxss";

.song-sheet{
    margin-top: 30rpx;
}
.item-title {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 24rpx;
  position: relative;
}

.title {
  font-size: 36rpx;
}

.right {
  float: right;
  font-size: 26rpx;
  color: #515151;
}

