<!--pages/index/childComps/new-music/new-music.wxml-->
<view class="new-music">
  <view class="item-title">
    <text class="title">{{title}}</text>
    <text class="right" bindtap="handleMore">更多</text>
    <image class="icon" src="/assets/icon/arrow.png" />
  </view>

  <view class="new-item">
    <block wx:for="{{indexNewMusic}}" wx:key="{{index}}">
      <view class="item-music" hover-class="item-music-hover" bind:tap="handlePlay" data-index="{{index}}">
        <block>
          <image wx:if="{{playIndex !== index}}" class="play" src="/assets/icon/play.png" />
          <image wx:else class="pause" src="/assets/icon/pause.png" />
        </block>
        <image class="item-image" src="{{item.img}}" bindload="imageLoad" />
        <text class="song-name">{{item.songName}}</text>
        <text class="singer">{{item.singer}}</text>
        <image class="icon" src="/assets/icon/arrow.png" />
      </view>
    </block>
  </view>
</view>